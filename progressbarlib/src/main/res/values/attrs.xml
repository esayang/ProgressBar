<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmartProgressBar">
        <attr name="progress_color" format="color"/>
        <attr name="background_color" format="color"/>
        <attr name="percent_visibility" format="boolean"/>
        <attr name="text_color" format="color"/>
        <attr name="bar_height" format="dimension"/>
        <attr name="percent_gravity" format="enum">
            <enum name="Center_Progress" value="1" />
            <enum name="Outer_Progress" value="2" />
            <enum name="Fixed_Left_Progress" value="5"/>
            <enum name="Fixed_Right_Progress" value="6"/>
        </attr>
        <attr name="corner_radius" format="dimension"/>
        <attr name="text_offset" format="dimension"/>
        <attr name="progress" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="text" format="string"/>
        <attr name="text_visibility" format="boolean"/>
        <attr name="text_gravity" format="enum">
            <enum name="Outer_Left_Bar" value="4" />
            <enum name="Outer_Right_Bar" value="3" />
            <enum name="Fixed_Left_Progress" value="5"/>
            <enum name="Fixed_Right_Progress" value="6"/>
        </attr>

    </declare-styleable>

</resources>